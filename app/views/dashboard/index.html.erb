<div class="min-h-screen bg-base-200">
  <div class="py-10">
    <header>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center">
          <h1 class="text-3xl font-bold leading-tight text-base-content">Dashboard</h1>
          <%= button_to "Sign out", session_path, method: :delete, class: "btn btn-outline" %>
        </div>
      </div>
    </header>
    <main>
      <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <div class="px-4 py-8 sm:px-0">
          <%= tag.div(flash[:alert], class: "alert alert-error mb-4") if flash[:alert] %>
          <%= tag.div(flash[:notice], class: "alert alert-success mb-4") if flash[:notice] %>
          <div class="card bg-base-100 shadow-xl p-6">
            <p class="text-base-content">Welcome to your dashboard. This is where you'll see your content and manage your account.</p>
          </div>
          <div class="card bg-base-100 shadow-xl p-6 mt-4">
            <h2 class="text-2xl font-bold mb-4">Upload PDF</h2>
            <%= form_with(model: @pdf, url: upload_pdf_dashboard_path, local: true, html: { class: "space-y-4" }) do |form| %>
              <div class="form-control">
                <%= form.label :file, class: "label" %>
                <%= form.file_field :file, class: "input input-bordered" %>
              </div>
              <div class="form-control">
                <%= form.submit "Upload", class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
          <div class="card bg-base-100 shadow-xl p-6 mt-4">
            <h2 class="text-2xl font-bold mb-4">Your PDFs</h2>
            <ul class="list-disc list-inside">
              <% @pdfs.each do |pdf| %>
                <li><%= link_to pdf.file.filename, rails_blob_path(pdf.file, disposition: "attachment"), class: "link" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
