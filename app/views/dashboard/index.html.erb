<div class="min-h-screen bg-gray-100">
  <div class="py-10">
    <header>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center">
          <h1 class="text-3xl font-bold leading-tight text-gray-900">Dashboard</h1>
          <%= button_to "Sign out", session_path, method: :delete, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    </header>
    <main>
      <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <div class="px-4 py-8 sm:px-0">
          <%= tag.div(flash[:alert], class: "mb-4 p-4 rounded-md bg-red-50 text-red-700") if flash[:alert] %>
          <%= tag.div(flash[:notice], class: "mb-4 p-4 rounded-md bg-green-50 text-green-700") if flash[:notice] %>
          <div class="bg-white shadow rounded-lg p-6">
            <p class="text-gray-700">Welcome to your dashboard. This is where you'll see your content and manage your account.</p>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
